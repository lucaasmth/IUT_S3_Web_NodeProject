<!doctype html>
<html lang="fr">
<head>
	<meta charset="utf-8">
	<title>S3 web</title>
	{% block stylesheets %}
		<link rel="stylesheet" href="/css/bootstrap.css" >
	{% endblock %}
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<div class="container-fluid">
			<a class="navbar-brand" href="/">SPA</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a class="nav-link" aria-current="page" href="/animaux">Animaux</a>
					</li>
				</ul>
				<div class="d-flex">
					{% if user %}
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									{{ user.username }}
								</a>
								<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
									<li><a class="dropdown-item" href="/logout">Se d√©connecter</a></li>
								</ul>
							</li>
						</ul>
					{% else %}
						<a class="btn btn-outline-success" href="/login">Se connecter</a>
					{% endif %}
				</div>
			</div>
		</div>
	</nav>

	{% for message in success_messages %}
		<div class="alert alert-primary" role="alert">
			{{ message }}
		</div>
	{% endfor %}
	{% for message in error_messages %}
		<div class="alert alert-danger" role="alert">
			{{ message }}
		</div>
	{% endfor %}
	<div class="container">
		{% block body %}
		{% endblock %}
	</div>

	{% block javascripts %}
		<script src="/js/jquery-3.5.1.slim.min.js"></script>
		<script src="js/popper.min.js"></script>
		<script src="/js/bootstrap.js"></script>
	{% endblock %}
</body>
</html>